                                            <Path Data="M1.20223 12L0.5 11.2733L5.59554 6L0.5 0.726727L1.20223 0L7 6L1.20223 12Z" Fill="black"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
